<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/background_layout">


        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:text="@string/historical"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_layout"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/tvIntr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:justificationMode="inter_word"
                android:layout_margin="10dp"
                android:text="@string/historyIntr"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/eldonHouse"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:src="@drawable/springbank"
                android:contentDescription="@string/eldonHouseImage"
                android:focusable="true" />



            <TextView
                android:id="@+id/tv1Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="16sp"
                android:text="@string/sampleText"
                android:justificationMode="inter_word"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"/>

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv1Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/ph"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/tv1PhoneNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_toEndOf="@+id/tv1Phone"
                    android:autoLink="phone"
                    android:text="@string/eldonHousePhoneNumber"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/bantingHouse"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:src="@drawable/springbank"
                android:contentDescription="@string/bantingHouseImage"
                android:focusable="true" />


            <TextView
                android:id="@+id/tv2Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="16sp"
                android:text="@string/sampleText"
                android:justificationMode="inter_word"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"/>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv2Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/ph"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/tv2PhoneNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_toEndOf="@+id/tv2Phone"
                    android:autoLink="phone"
                    android:text="@string/bantingHousePhoneNumber"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/pioneerVillage"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:src="@drawable/springbank"
                android:contentDescription="@string/pioneerVillageImage"
                android:focusable="true" />



            <TextView
                android:id="@+id/tv3Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="16sp"
                android:text="@string/sampleText"
                android:justificationMode="inter_word"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"/>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv3Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/ph"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/tv3PhoneNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_toEndOf="@+id/tv3Phone"
                    android:autoLink="phone"
                    android:text="@string/pioneerVillagePhoneNumber"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    />
            </RelativeLayout>



        </LinearLayout>
    </ScrollView>

</LinearLayout>