<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true" >
        <shape
            android:shape="rectangle"  >

            <stroke
                android:width="2dip"
                android:color="#f2d7a8" />
            <gradient
                android:angle="-90"
                android:startColor="#f2d7a8"
                android:endColor="#f2d7a8"  />
        </shape>
    </item>

    <item
        android:state_focused="true">
        <shape
            android:shape="rectangle"  >
            <stroke
                android:width="1dip"
                android:color="#f2d7a8" />
            <solid
                android:color="#f2d7a8"/>
        </shape>
    </item>

    <item >
        <shape
            android:shape="rectangle"  >
            <stroke
                android:width="1dip"
                android:color="#e9980a" />
            <gradient
                android:angle="-90"
                android:startColor="#e9980a"
                android:endColor="#e9980a" />
        </shape>
    </item>
</selector>