<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true" >
        <shape
            android:shape="rectangle"  >

            <stroke
                android:width="2dip"
                android:color="#f6c2c0" />
            <gradient
                android:angle="-90"
                android:startColor="#f6c2c0"
                android:endColor="#f6c2c0"  />
        </shape>
    </item>

    <item
        android:state_focused="true">
        <shape
            android:shape="rectangle"  >

            <stroke
                android:width="1dip"
                android:color="#f6c2c0" />
            <solid
                android:color="#f6c2c0"/>
        </shape>
    </item>

    <item >
        <shape
            android:shape="rectangle"  >

            <stroke
                android:width="1dip"
                android:color="#f9423a" />
            <gradient
                android:angle="-90"
                android:startColor="#f9423a"
                android:endColor="#f9423a" />
        </shape>
    </item>

</selector>