<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true" >
        <shape
            android:shape="rectangle"  >

            <stroke
                android:width="2dip"
                android:color="#FF21D3" />
            <gradient
                android:angle="-90"
                android:startColor="#FF21D3"
                android:endColor="#FF21D3"  />
        </shape>
    </item>

    <item
        android:state_focused="true">
        <shape
            android:shape="rectangle"  >

            <stroke
                android:width="1dip"
                android:color="#720D5D" />
            <solid
                android:color="#720D5D"/>
        </shape>
    </item>

    <item >
        <shape
            android:shape="rectangle"  >

            <stroke
                android:width="1dip"
                android:color="#720D5D" />
            <gradient
                android:angle="-90"
                android:startColor="#720D5D"
                android:endColor="#720D5D" />
        </shape>
    </item>

</selector>