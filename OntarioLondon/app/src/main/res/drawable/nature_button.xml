<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true" >
        <shape
            android:shape="rectangle"  >

            <stroke
                android:width="2dip"
                android:color="#cdd7e7" />
            <gradient
                android:angle="-90"
                android:startColor="#cdd7e7"
                android:endColor="#cdd7e7"  />
        </shape>
    </item>

    <item
        android:state_focused="true">
        <shape
            android:shape="rectangle"  >

            <stroke
                android:width="1dip"
                android:color="#cdd7e7" />
            <solid
                android:color="#cdd7e7"/>
        </shape>
    </item>

    <item >
        <shape
            android:shape="rectangle"  >

            <stroke
                android:width="1dip"
                android:color="#3f6ab4" />
            <gradient
                android:angle="-90"
                android:startColor="#3f6ab4"
                android:endColor="#3f6ab4" />
        </shape>
    </item>

</selector>