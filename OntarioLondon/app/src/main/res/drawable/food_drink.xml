<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true" >
        <shape
            android:shape="rectangle"  >

            <stroke
                android:width="2dip"
                android:color="#dbe6ee" />
            <gradient
                android:angle="-90"
                android:startColor="#dbe6ee"
                android:endColor="#dbe6ee"  />
        </shape>
    </item>

    <item
        android:state_focused="true">
        <shape
            android:shape="rectangle"  >

            <stroke
                android:width="1dip"
                android:color="#dbe6ee" />
            <solid
                android:color="#dbe6ee"/>
        </shape>
    </item>

    <item >
        <shape
            android:shape="rectangle"  >

            <stroke
                android:width="1dip"
                android:color="#9faeb8" />
            <gradient
                android:angle="-90"
                android:startColor="#9faeb8"
                android:endColor="#9faeb8" />
        </shape>
    </item>

</selector>