<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true" >
        <shape
            android:shape="rectangle"  >

            <stroke
                android:width="2dip"
                android:color="#b2ea9c" />
            <gradient
                android:angle="-90"
                android:startColor="#b2ea9c"
                android:endColor="#b2ea9c"  />
        </shape>
    </item>

    <item
        android:state_focused="true">
        <shape
            android:shape="rectangle"  >

            <stroke
                android:width="1dip"
                android:color="#b2ea9c" />
            <solid
                android:color="#b2ea9c"/>
        </shape>
    </item>

    <item >
        <shape
            android:shape="rectangle"  >

            <stroke
                android:width="1dip"
                android:color="#4ec91c" />
            <gradient
                android:angle="-90"
                android:startColor="#4ec91c"
                android:endColor="#4ec91c" />
        </shape>
    </item>

</selector>