<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true" >
        <shape
            android:shape="rectangle"  >

            <stroke
                android:width="2dip"
                android:color="#39F507" />
            <gradient
                android:angle="-90"
                android:startColor="#39F507"
                android:endColor="#39F507"  />
        </shape>
    </item>

    <item
        android:state_focused="true">
        <shape
            android:shape="rectangle"  >

            <stroke
                android:width="1dip"
                android:color="#39F507" />
            <solid
                android:color="#39F507"/>
        </shape>
    </item>

    <item >
        <shape
            android:shape="rectangle"  >

            <stroke
                android:width="1dip"
                android:color="#23A800" />
            <gradient
                android:angle="-90"
                android:startColor="#23A800"
                android:endColor="#23A800" />
        </shape>
    </item>


</selector>